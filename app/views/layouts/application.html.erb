<!DOCTYPE html>
<html>
<head>
  <title>Blocmetrics</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="home">
  <div class-"container">

    <ul class="nav nav-tabs">

      <li><%= link_to "BlocMetrics", root_path, class: 'navbar-brand' %></li>
      <div class="pull-right user-info">
        <div class="btn-group" role="group" aria-label="...">
          <%= link_to "Sign In", new_user_session_path, class: 'btn btn-default' %>
          <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-default' %>
        </div>
      </div>

    </ul>

    <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
    <% elsif flash[:error] %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:error] %>
    </div>
    <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
    <% end %>

    <div class="row">

      <%= yield %>

    </div>

  </div>
</body>
</html>
